<%- include('../partials/header.ejs') %>

<section class="container">
        <% if(products.length <= 0 ){ %>
        <h1>Orders empty Stupid !!!!</h1>
        <% }else { %>
        <% for(let prod of products) { %>
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Order Id : #<%= prod._id %></h5>
                    
                    <% for (let item of prod.items){ %>
                    <div class="row">
                        <div class="card w-75">
                            <div class="card-body">
                                <h5 class="card-title"><%= item.products.title %></h5>
                                <p class="card-text"><%= item.products.description %></p>
                                <p class="card-text"><%= item.quantity %></p>

                            </div>
                        </div>
                    </div>
                    <% } %>
                <a href="/invoice/<%= prod._id %>" class="btn btn-primary">Invoice</a>

                </div>
            </div>
        <% } %>
        <% } %>   

</section>
</body>

</html>