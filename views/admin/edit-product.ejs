                    <div class="form-group row">
                        <label for="inputEmail33" class="col-sm-2 col-form-label">Image</label>
                        <div class="col-sm-10">
                        <input type="file" name="image" class="form-control"  id="inputEmail33">
                        </div>
                    </div>
                    
                    <div class="form-group row">
                        <label for="inputEmail32" class="col-sm-2 col-form-label">Price</label>
                        <div class="col-sm-10">
                        <input type="number" step="0.1" name="price" class="form-control" id="inputEmail32" value =" <% if(editing) { %> <%= product.price %> <% } %>" >
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputEmail31" class="col-sm-2 col-form-label">Description</label>
                        <div class="col-sm-10">
                        <textarea type="text" name="description" class="form-control" id="inputEmail31" ><% if(editing) { %><%= product.description %> <% } %></textarea>
                        </div>
                    </div>
                    <% if(editing){ %>
                        <input type="hidden" name="productId" value="<%= product._id %>" >
                    <% } %>
                    <div class="row d-flex justify-content-center">
                        <div class="form-group row mt-3">
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-primary"><% if(editing) { %> Update product <% }else { %> Add product<% } %></button>
                            </div>
                        </div>
                    </div>
                    
                    
                </form>
            </div>
        </div>
    </section>

   
